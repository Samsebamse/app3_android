<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/startblue"
        android:gravity="center"
        android:paddingTop="10sp"
        android:text="@string/summary"
        android:textColor="@color/graylight"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:background="@color/startblue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_cigarette" />

            <TextView
                android:id="@+id/saved_tobacco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_money" />

            <TextView
                android:id="@+id/saved_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="130sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_medal" />

            <TextView
                android:id="@+id/saved_trophy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/graylight"
        android:orientation="vertical"
        android:paddingTop="10sp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="@string/smokefree"
            android:textColor="@color/startblue"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_seconds"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/startblue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_minutes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/startblue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_hours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/startblue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/view_days"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="gravity"
                android:textColor="@color/startblue"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>